@{
	ViewData["Title"] = "Collaboration";
}

<div class="full-container">
	<div class="container-fluid bg-white">
		<div class="container mt-4">
			<h2 class="text-center font-poppins mb-4">Life at Endorsin</h2>
			<div class="container">
				<div id="life-endorsin" class="row align-items-center">
					<div class="col">
						<p class="font-montserrat fs-5">We open very wide opportunities for those of you who are interested in developing a career by joining Endorsin. With your help, let's make Endorsin the best digital marketing for MSME businesses in Indonesia.</p>
						<br/>
						<img class="float-start px-4" src="/assets/icons/mail.png"/>
						<p class="font-montserrat fs-5">endorsin@hrd.co.id</p>
						<br/>
						<img class="float-start px-4" src="/assets/icons/phone.png"/>
						<p class="font-montserrat fs-5">+62 878 1971 7584</p>
						<br/>
						<img class="float-start px-4" src="/assets/icons/instagram.png"/>
						<p class="font-montserrat fs-5">endorsin_indonesia</p>
						
					</div>
					<div class="col">
						<img class="img-fluid" src="/assets/vecteezy_brainstorming-process-concept-with-team-meeting_.jpg"/>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container p-4">
		<h2 class="font-poppins text-center">Be Our Partner</h2>
		<p class="font-montserrat text-center">Our mission would be difficult to achieve without your co-operative help. Be our partner and together we will advance MSMEs in Indonesia</p>
		<div class="container-md form-container border p-4 bg-white shadow font-montserrat">
			<form>
			  <div class="form-group mb-2">
				<label for="namaPerusahaan">Company name</label>
				<input type="text" class="form-control" id="namaPerusahaan" aria-describedby="namaPerusahaan" placeholder="Enter company name">
				</div>
			  <div class="form-group mb-2">
				<label for="emailPerusahaan">Company Email</label>
				<input type="email" class="form-control" id="emailPerusahaan" aria-describedby="emailPerusahaan" placeholder="Enter company email">
			  </div>
			  <div class="form-group mb-2">
				<label for="alamatPerusahaan">Address</label>
				<input type="text" class="form-control" id="alamatPerusahaan" aria-describedby="alamatPerusahaan" placeholder="Enter company address">
			  </div>
			  <div class="form-group mb-2">
				<label for="deskripsiPerusahaan">Description</label>
				<textarea class="form-control" id="deskripsiPerusahaan" rows="3" placeholder="Describe your company"></textarea>
			  </div>
			  <div class="form-check mb-3">
				<input type="checkbox" class="form-check-input" id="exampleCheck1">
				<label class="form-check-label" for="exampleCheck1">I agree to the applicable <a href="" class="text-primary">Terms & Conditions</a></label>
			  </div>
			  <button type="submit" class="btn btn-warning font-montserrat-bold text-white">Send</button>
			</form>
		</div>
	</div>
	<br/>
</div>
